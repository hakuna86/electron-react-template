{
  "name": "electron-react-template",
  "version": "1.0.0",
  "description": "electron-react-template",
  "author": "hakuna",
  "license": "MIT",
  "private": true,
  "main": "./src/electron",
  "scripts": {
    "start" : "nf start",
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "start:react": "MODE=dev webpack-dev-server --mode development",
    "start:react-web": "webpack-dev-server --mode development --open",
    "start:electron": "MODE=dev electron .",
    "dist": "electron-builder",
    "build:win64": "build --win --x64"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "electron": "^15.5.5",
    "electron-builder": "^20.43.0",
    "file-loader": "^4.0.0",
    "foreman": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.7.1"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "build": {
    "productName": "electronReactTemplate",
    "appId": "org.hakuna.elctron.react.template",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "build/**/*",
      "!dist/**/*",
      "!src/**/*",
      "node_modules/**/*"
    ]
  }
}
